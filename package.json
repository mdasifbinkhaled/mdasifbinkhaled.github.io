{
  "name": "mdasifbinkhaled.github.io",
  "version": "1.0.0",
  "description": "Academic portfolio showcasing research, publications, teaching activities, and professional experience",
  "author": {
    "name": "Md Asif Bin Khaled",
    "url": "https://mdasifbinkhaled.github.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdasifbinkhaled/mdasifbinkhaled.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/mdasifbinkhaled/mdasifbinkhaled.github.io/issues"
  },
  "homepage": "https://mdasifbinkhaled.github.io",
  "keywords": [
    "portfolio",
    "academic",
    "research",
    "nextjs",
    "typescript",
    "tailwindcss"
  ],
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "npm@11.4.2",
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NEXT_TELEMETRY_DISABLED=1 next build",
    "build:production": "cross-env NEXT_TELEMETRY_DISABLED=1 NODE_ENV=production npm run build",
    "postbuild": "node -e \"const fs = require('fs'); fs.mkdirSync('out', { recursive: true }); fs.writeFileSync('out/.nojekyll', '');\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "validate": "npm run lint:check && npm run format:check && npm run test:run && npm run typecheck"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "^15.4.7",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.x",
    "@testing-library/react": "^16.x",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.x",
    "@types/react": "^19.1.16",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "commitlint": "^20.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.0",
    "husky": "^9.1.7",
    "jsdom": "^25.x",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.41",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "tsc-files": "^1.1.4",
    "typescript": "^5.6.x",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "glob": "10.1.0"
  }
}
